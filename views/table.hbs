<div class="container mx-auto">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Desc</th>
                </tr>
            </thead>
            <tbody>
                {{#each products }}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td class="text-capitalize">{{name}}</td>
                    <td>{{price}}</td>
                    <td>
                        <img style="width:50px; aspect-ratio: 1;" src="{{image}}" alt="">
                    </td>
                    <td style="font-size: 12px;">{{desc}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>